          "enum": [
            "ssg",
            "ssr",
            "spa"
          ]
        },
        "staticPaths": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "ssg": {
          "type": "object",
          "properties": {
            "revalidateSeconds": {
              "type": "integer",
