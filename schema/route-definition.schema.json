        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "input": {
          "type": "object",
          "properties": {
            "params": {
              "type": "object",
              "properties": {
                "kind": {
                  "type": "string",
                  "enum": [
                    "zod",
                    "json-schema",
                    "ts-rest"
                  ],
                  "default": "zod"
                },
                "name": {
                  "type": "string"
                },
                "source": {
                  "type": "string"
                }
              },
              "required": [
