              "$ref": "#/definitions/route-definition/properties/input/properties/params"
            },
            "headers": {
              "$ref": "#/definitions/route-definition/properties/input/properties/params"
            }
          },
          "additionalProperties": false
        },
        "output": {
          "type": "object",
          "properties": {
            "body": {
              "$ref": "#/definitions/route-definition/properties/input/properties/params"
            },
            "status": {
              "type": "integer",
              "minimum": 100,
              "maximum": 599
            },
            "headers": {
              "$ref": "#/definitions/route-definition/properties/input/properties/params"
            }
          },
          "required": [
            "body"
          ],
          "additionalProperties": false
        },
        "errors": {
          "type": "array",
          "items": {
            "type": "object",
